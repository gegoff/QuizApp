<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="#000000"
                android:text="Mr. Broady Quiz"
                android:layout_margin="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. What is Mr.Broady's favorite country?"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USA"/>
                <RadioButton
                    android:id="@+id/radioCorrectG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Germany"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latvia"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Australia"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. ITS likes Mr. Broady"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="True"/>
                <RadioButton
                    android:id="@+id/radioCorrectF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="False"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Which are names of Mr. Broady's pets?"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/Sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sam"/>
            <CheckBox
                android:id="@+id/Rocco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rocco"/>
            <CheckBox
                android:id="@+id/Fluffy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluffy"/>
            <CheckBox
                android:id="@+id/Oliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oliver"/>
            <CheckBox
                android:id="@+id/Android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Studio"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="4. What is Mr. Broady's favorite sport?"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Sport"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:onClick="onClick"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:text="Your Score: "/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>